<div id="edit-userstory-modal" class="modal">
    <div class="modal-content">
        <h4>Edit Story</h4>
        <form id="edit-story-form">
            <div class="row">
                <div class="col s6">
                    <input type="text" name="title" placeholder="Title">
                </div>
            </div>
            <div class="row">
                <div class="col s6">
                    <input type="text" name="date" placeholder="Date">
                </div>
            </div>
            <div class="row">
                <div class="col s6">
                    <input id="edit-story-textbox" type="textbox" name="story" placeholder="Your Story">
                </div>
            </div>
            <div class="row">
                <div class="col s6">
                    <input type="text" name="tags[tag1]" placeholder="Tag 1">
                </div>
                <div class="col s6">
                    <input type="text" name="tags[tag2]" placeholder="Tag 2">
                </div>
                <div class="col s6">
                    <input type="text" name="tags[tag3]" placeholder="Tag 3">
                </div>
            </div>
            <div class="row">
                <div class="col s6">
                    <input type="radio" name="public" value="true">Public
                    <input type="radio" name="public" value="false">Private
                </div>
            </div>
            <div class="modal-footer">
                <input type="submit" value="Submit" class="waves-effect waves-yellow btn-flat modal-action modal-close">
                <button id="delete-button" type="button" class="btn-small">Delete Story</button>
            </div>

        </form>
    </div>
</div>
